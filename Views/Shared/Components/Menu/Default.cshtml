@model IEnumerable<MenuItem>

<div class="navbar-nav">
    @foreach (var item in Model)
    {
        @if (item.IsPage)
        {
            <a class="nav-item nav-link @item.Active"
               asp-area="@item.Area" asp-page="@item.Page">
                @item.Text
            </a>
        }
        else
        {
            <a class="nav-item nav-link @item.Active"
               asp-controller="@item.Active" asp-action="@item.Controller">
                @item.Text
            </a>
        }
    }
</div>